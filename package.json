{
  "name": "typescript-npm-module-starter",
  "version": "1.0.2",
  "description": "Starter pack for building a npm module in Typescript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm test && npm run lint",
    "prepare": "npm run build",
    "prettier:check": "prettier --config .prettierrc --check .",
    "prettier:write": "prettier --config .prettierrc --write .",
    "preversion": "npm run lint",
    "test": "jest --config jestconfig.json",
    "version": "npm run prettier:write && git add -A src"
  },
  "keywords": [
    "Typescript",
    "TS",
    "npm",
    "module"
  ],
  "author": "TÃ©rence BARBE <https://github.com/Tete1805>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  }
}
